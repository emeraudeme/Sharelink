<div class="container" style="margin-top: 100px;">
  <h1 style="display: inline-block; margin: 0 15px 40px 0;">Récents</h1><span class="badge badge-success" style="vertical-align: super;"><%= notice %></span>
   <div class="row">
      <div class="col-sm-12 col-md-8">
         <ul class="resource-list front-end">
            <li>
               <%= link_to new_link_path do %>
                  <div class="resource-icon-add"><i class="fa fa-plus"></i></div>
               <% end %>
               <div class="resource-details addone">
                  <h2><span class="noselect">Chuck Norris</span></h2>
                  <span class="noselect">Braddock ! Je vous préviens, attention où vous mettez les pieds ! Je mets les pieds où je veux… et c'est souvent dans la gueule.</span>
               </div>
            </li>
            <% @links.reverse_each do |link| %>
            <li>
               <a href="<%= link.link %>" target="_blank" rel="nofollow">
                  <div class="resource-icon">
                     <%= image_tag link.logo.url %>
                  </div>
               </a>
               <div class="resource-details">
                  <div class="resource-head">
                     <a href="<%= link.link %>" target="_blank" rel="nofollow">
                        <h2><%= link.name %></h2>
                     </a>
                  </div>
                  <div class="actions2">
                    <%= link_to edit_link_path(link) do %>
                    <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to link, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i>
                    <% end %>
                  </div>
                  <p><%= link.textlink %></p>
               </div>
            </li>
            <% end %>
         </ul>
      </div>
      <div class="col-md-4 hidden-sm-down">
         <ul class="sidebar-navigation">
            <li>
               <%= link_to root_path do %>
                  <div class="circle"></div>
                  Récents
               <% end %>
            </li>
            <% @categories.each do |category_id| %>
            <li>
               <%= link_to category_path(category_id) do %>
                  <div class="circle" style="background-color:<%= category_id.color %>"></div>
                  <%= Category.find(category_id).name %>
               <% end %>
               <div class="actions2">
                 <%= link_to edit_category_path(category_id) do %>
                 <i class="fa fa-pencil"></i>
                 <% end %>
                 <%= link_to category_id, method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <i class="fa fa-trash"></i>
                 <% end %>
               </div>
            </li>
            <% end %>
            <li>
               <%= link_to new_category_path do %>
                  <div class="circle-add"></div>
                  Ajouter
