<div class="container">
  <div class="row">

    <% if can? :create, Link %>
    <%= link_to new_link_path do %>
    <div class="btnaddtop"><i class="icon3 icon-add"></i> <span>Soumettre un lien</span></div>
    <% end %>
    <% end %>

    <% if user_signed_in? %>
