    <%= f.password_field :password, {:class => 'form-control form-control-lg', :placeholder => 'Nouveau mot de passe', :required => true} %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, {:class => 'form-control form-control-lg', :placeholder => 'Confirmer le nouveau mot de passe', :required => true} %>
  </div>

  <div class="form-group">
    <%= f.password_field :current_password, {:class => 'form-control form-control-lg', :placeholder => 'Ancien mot de passe', :required => true} %>
  </div>

